@model HotBug.Models.Company

@{
    ViewData["Title"] = "Create";
}

<hr />

<div class="row mt-4">
    <div class="col-xl-2"></div>
    <div class="col-xl-8 ">
        <div class="card">
            <div class="row pt-3 mb-4 mx-4">
                <div class="col">
                    <h3 class="font-bold text-white text-center bg-secondary-gradient mt-3 mb-3 py-1">Create a Company</h3>
                </div>
                <div class="col-md-12">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-4">
                            <input type="submit" value="Create" class="btn text-white semibold-text btn-primary btn-md btn-rounded" />
                        </div>
                    </form>
                    <div>
                        <a asp-action="Index" class="mb-4">Back to List</a>
                    </div>
                </div>
        </div>
    </div>
    <div class="col-xl-2"></div>
</div>

    <!-- Sidebar-right-->
    <div class="sidebar sidebar-right sidebar-animate">
        <div class="panel panel-primary card mb-0 box-shadow">
            <div class="tab-menu-heading border-0 p-3">
                <div class="card-title mb-0">Settings</div>
                <div class="card-options ms-auto">
                    <a class="sidebar-remove"><i class="fe fe-x"></i></a>
                </div>
            </div>
            <div class="panel-body tabs-menu-body latest-tasks p-0 border-0">
                <div class="tabs-menu ">
                    <!-- Tabs -->
                    <ul class="nav panel-tabs">
                        <li><a asp-area="Identity" asp-page="/Account/Manage/Index" target="_blank" title="Profile"><i class="fe fe-bell tx-15 me-2"></i>Profile</a></li>
                        <li><a asp-action="Index" asp-controller="Notifications"><i class="fe fe-bell tx-15 me-2"></i> Notifications</a></li>
                    </ul>
                </div>
                <div class="tab-content">
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

