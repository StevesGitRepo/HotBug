@model HotBug.Models.ViewModels.AssignPMViewModel

@{
    ViewData["Title"] = "Assign PM";
}

<h1 class="mt-4 pt-4">Project: @Model.Project.Name</h1>

<h4>Assign Project Manager</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="AssignPM" asp-controller="Projects">
            <input hidden asp-for="Project.Id"/>

            <h2>@Model.Project.Name </h2>

            <p>@Model.Project.Description</p>

            <div class="form-group">
                <label class="control-label">Select Project Manager</label>
                <select asp-for="PMID" class="form-control" asp-items="@Model.PMList">
                    <option></option>
                </select>

                <input type="submit" value="Assign" class="btn btn-primary mt-3"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="UnassignedProjects">Back to List</a>
</div>
<!-- Sidebar-right-->
<div class="sidebar sidebar-right sidebar-animate">
    <div class="panel panel-primary card mb-0 box-shadow">
        <div class="tab-menu-heading border-0 p-3">
            <div class="card-title mb-0">Settings</div>
            <div class="card-options ms-auto">
                <a class="sidebar-remove"><i class="fe fe-x"></i></a>
            </div>
        </div>
        <div class="panel-body tabs-menu-body latest-tasks p-0 border-0">
            <div class="tabs-menu ">
                <!-- Tabs -->
                <ul class="nav panel-tabs">
                    <li><a asp-area="Identity" asp-page="/Account/Manage/Index" target="_blank" title="Profile"><i class="fe fe-bell tx-15 me-2"></i>Profile</a></li>
                    <li><a asp-action="Index" asp-controller="Notifications"><i class="fe fe-bell tx-15 me-2"></i> Notifications</a></li>
                </ul>
            </div>
            <div class="tab-content">
            </div>
        </div>
    </div>
</div>