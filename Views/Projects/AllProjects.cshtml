@model IEnumerable<HotBug.Models.Project>
@using HotBug.Models.Enums;
@using Microsoft.AspNetCore.Identity;
@using HotBug.Services.Interfaces;

@inject UserManager<HBUser> UserManager
@inject IHBProjectService projectService

@{
    ViewData["Title"] = "All Projects";
    HBUser hBUser = await UserManager.GetUserAsync(User);
}

<div class="mt-5">

    <div class="row mt-5">

        <!--ALL PROJECTS-->
        <div class="col-xl-3 col-lg-6 col-md-6 col-6">
            <div class="card overflow-hidden sales-card bg-secondary-transparent alert-dark">
                <a asp-controller="Projects" asp-action="AllProjects">
                    <div class="px-3 pt-3  pb-2 pt-0">
                        <div class="">
                            <h6 class="mb-3 tx-16 text-dark text-uppercase">ALL PROJECTS</h6>
                        </div>
                        <div class="pb-0 mt-0">
                            <div class="d-flex">
                                <span class="float-end my-auto ms-auto">
                                    <i class="fas fa-arrow-circle-up text-white"></i>
                                    <h4 class="tx-20 fw-bold mb-1 text-white">
                                    </h4>
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!--MY PROJECTS-->
        <div class="col-xl-3 col-lg-6 col-md-6 col-6">
            <div class="card overflow-hidden sales-card bg-secondary-gradient">
                <a asp-controller="Projects" asp-action="MyProjects">
                    <div class="px-3 pt-3  pb-2 pt-0">
                        <div class="">
                            <h6 class="mb-3 tx-16 text-white">MY PROJECTS</h6>
                        </div>
                        <div class="pb-0 mt-0">
                            <div class="d-flex">
                                <span class="float-end my-auto ms-auto">
                                    <i class="fas fa-arrow-circle-up text-white"></i>
                                    <h4 class="tx-20 fw-bold mb-1 text-white">
                                    </h4>
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!--ARCHIVED PROJECTS-->
        <div class="col-xl-3 col-lg-6 col-md-6 col-6">
            <div class="card overflow-hidden sales-card bg-secondary-gradient">
                <a asp-controller="Projects" asp-action="ArchivedProjects">
                    <div class="px-3 pt-3  pb-2 pt-0">
                        <div class="">
                            <h6 class="mb-3 tx-16 text-white">ARCHIVED PROJECTS</h6>
                        </div>
                        <div class="pb-0 mt-0">
                            <div class="d-flex">
                                <span class="float-end my-auto ms-auto">
                                    <i class="fas fa-arrow-circle-up text-white"></i>
                                    <h4 class="tx-20 fw-bold mb-1 text-white">
                                    </h4>
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!--UNASSIGNED TICKETS-->
        @if (User.IsInRole(nameof(Roles.Admin)))
        {
            <div class="col-xl-3 col-lg-6 col-md-6 col-6">
                <div class="card overflow-hidden sales-card bg-secondary-gradient">
                    <a asp-controller="Projects" asp-action="UnassignedProjects">
                        <div class="px-3 pt-3  pb-2 pt-0">
                            <div class="">
                                <h6 class="mb-3 tx-16 text-white text-uppercase">UNASSIGNED PROJECTS</h6>
                            </div>
                            <div class="pb-0 mt-0">
                                <div class="d-flex">
                                    <span class="float-end my-auto ms-auto">
                                        <i class="fas fa-arrow-circle-up text-white"></i>
                                        <h4 class="tx-20 fw-bold mb-1 text-white">
                                        </h4>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="col-xl-3 col-lg-6 col-md-6 col-6">
                <div class="card overflow-hidden sales-card bg-secondary-gradient" title="Admin & Project Manager Access">
                    <div class="px-3 pt-3  pb-2 pt-0">
                        <div class="">
                            <h6 class="mb-3 tx-16 text-white text-uppercase">UNASSIGNED (admin only)</h6>
                        </div>
                        <div class="pb-0 mt-0">
                            <div class="d-flex">
                                <span class="float-end my-auto ms-auto">
                                    <i class="fas fa-arrow-circle-up text-white"></i>
                                    <h4 class="tx-20 fw-bold mb-1 text-white">
                                    </h4>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="card mt-2 px-4">
        <div class="row pt-3">
            <div class="col-6 text-dark font-weight-bold">
                <h3>
                    All Projects
                </h3>
            </div>
            <div class="col-6 text-end">
                <h3>
                    <span>
                        @if (User.IsInRole(nameof(Roles.Admin)) || User.IsInRole(nameof(Roles.ProjectManager)))
                        {
                            <a asp-action="Create" class="btn btn-md btn-purple semibold-text mb-2">Start A Project</a>
                        }
                    </span>
                </h3>
            </div>
        </div>
        <div class="card">
            <div class="table-responsive country-table" style="overflow-y:auto;height:600px;">
                <table class="table table-striped table-bordered mb-0 text-sm-nowrap text-lg-nowrap text-xl-nowrap">
                    <thead>
                        <tr class="">
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th class="bg-dark text-light ps-5 pe-5">
                                <div class="ps-5 pe-5">
                                    @Html.DisplayNameFor(model => model.Description)
                                </div>
                            </th>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.StartDate)
                            </th>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.EndDate)
                            </th>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.ImageFileName)
                            </th>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.ImageFileData)
                            </th>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.ImageContentType)
                            </th>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.Archived)
                            </th>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.Company)
                            </th>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.ProjectPriority)
                            </th>
                            <th class="bg-dark text-light">ACTION</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EndDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ImageFileName)
                                </td>
                                <td>
                                    @if (item.ImageFileData != null)
                                    {
                                        <img style="width:60px; height:60px" src="data:image/*;base64,@(Convert.ToBase64String(item.ImageFileData))" />
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ImageContentType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Archived)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Company!.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProjectPriority!.Id)
                                </td>
                                <td>
                                    <a asp-controller="Projects" asp-action="Details" asp-route-id="@item.Id">Details</a>

                                    @{
                                        bool isProjectPM = (await projectService.GetProjectManagerAsync(item.Id))?.Id == hBUser.Id;
                                    }

                                    @if (User.IsInRole(nameof(Roles.Admin)) || isProjectPM)
                                    {
                                        <a asp-controller="Projects" asp-action="Edit" asp-route-id="@item.Id">Edit</a>

                                        @if (item.Archived)
                                        {
                                            <a asp-action="Restore" asp-route-id="@item.Id">Restore</a>
                                        }
                                        else
                                        {
                                            <a asp-action="Archive" asp-route-id="@item.Id">Archive</a>
                                        }
                                    }
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <div class="mb-3">
            <a asp-action="Dashboard" asp-controller="Home">Back to Dashboard</a>
        </div>
    </div>
</div>

