@model IEnumerable<HotBug.Models.Project>
@using HotBug.Models.Enums;
@using Microsoft.AspNetCore.Identity;
@using HotBug.Services.Interfaces;

@inject UserManager<HBUser> UserManager
@inject IHBProjectService projectService

@{
    ViewData["Title"] = "Unassigned Projects";
}

<div class="mt-5">

    <div class="row mt-5">

        <!--ALL PROJECTS-->
        <div class="col-xl-3 col-lg-6 col-md-6 col-6">
            <div class="card overflow-hidden sales-card bg-secondary-gradient">
                <a asp-controller="Projects" asp-action="AllProjects">
                    <div class="px-3 pt-3  pb-2 pt-0">
                        <div class="">
                            <h6 class="mb-3 tx-16 text-white">ALL PROJECTS</h6>
                        </div>
                        <div class="pb-0 mt-0">
                            <div class="d-flex">
                                <span class="float-end my-auto ms-auto">
                                    <i class="fas fa-arrow-circle-up text-white"></i>
                                    <h4 class="tx-20 fw-bold mb-1 text-white">
                                    </h4>
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!--MY PROJECTS-->
        <div class="col-xl-3 col-lg-6 col-md-6 col-6">
            <div class="card overflow-hidden sales-card bg-secondary-gradient">
                <a asp-controller="Projects" asp-action="MyProjects">
                    <div class="px-3 pt-3  pb-2 pt-0">
                        <div class="">
                            <h6 class="mb-3 tx-16 text-white">MY PROJECTS</h6>
                        </div>
                        <div class="pb-0 mt-0">
                            <div class="d-flex">
                                <span class="float-end my-auto ms-auto">
                                    <i class="fas fa-arrow-circle-up text-white"></i>
                                    <h4 class="tx-20 fw-bold mb-1 text-white">
                                    </h4>
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!--ARCHIVED PROJECTS-->
        <div class="col-xl-3 col-lg-6 col-md-6 col-6">
            <div class="card overflow-hidden sales-card bg-secondary-gradient">
                <a asp-controller="Projects" asp-action="ArchivedProjects">
                    <div class="px-3 pt-3  pb-2 pt-0">
                        <div class="">
                            <h6 class="mb-3 tx-16 text-white">ARCHIVED</h6>
                        </div>
                        <div class="pb-0 mt-0">
                            <div class="d-flex">
                                <span class="float-end my-auto ms-auto">
                                    <i class="fas fa-arrow-circle-up text-white"></i>
                                    <h4 class="tx-20 fw-bold mb-1 text-white">
                                    </h4>
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!--UNASSIGNED PROJECTS-->
        @if (User.IsInRole(nameof(Roles.Admin)))
        {
            <div class="col-xl-3 col-lg-6 col-md-6 col-6">
                <div class="card overflow-hidden sales-card bg-white alert-dark">
                    <a asp-controller="Projects" asp-action="UnassignedProjects">
                        <div class="px-3 pt-3  pb-2 pt-0">
                            <div class="">
                                <h6 class="mb-3 tx-16 text-dark text-uppercase">UNASSIGNED</h6>
                            </div>
                            <div class="pb-0 mt-0">
                                <div class="d-flex">
                                    <span class="float-end my-auto ms-auto">
                                        <i class="fas fa-arrow-circle-up text-white"></i>
                                        <h4 class="tx-20 fw-bold mb-1 text-white">
                                        </h4>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="col-xl-3 col-lg-6 col-md-6 col-6">
                <div class="card overflow-hidden sales-card bg-white alert-dark" title="Admin & Project Manager Access">
                    <div class="px-3 pt-3  pb-2 pt-0">
                        <div class="">
                            <h6 class="mb-3 tx-16 text-dark text-uppercase">UNASSIGNED</h6>
                        </div>
                        <div class="pb-0 mt-0">
                            <div class="d-flex">
                                <span class="float-end my-auto ms-auto">
                                    <i class="fas fa-arrow-circle-up text-white"></i>
                                    <h4 class="tx-20 fw-bold mb-1 text-white">
                                    </h4>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>

    <div class="card mt-2 px-4">
        <div class="row pt-3">
            <div class="col-6 text-dark font-weight-bold">
                <h3>
                    Unassigned Projects
                </h3>
            </div>
            <div class="col-6 text-end">
                <h3>
                    <span>
                        @if (User.IsInRole(nameof(Roles.Admin)) || User.IsInRole(nameof(Roles.ProjectManager)))
                        {
                            <a asp-action="Create" class="btn btn-md btn-purple semibold-text mb-2">Start A Project</a>
                        }
                    </span>
                </h3>
            </div>
            <div class="table-responsive country-table" style="overflow-y:auto;height:600px;">
                <table class="table table-striped table-bordered mb-0 text-sm-nowrap text-lg-nowrap text-xl-nowrap">
                    <thead>
                        <tr>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.StartDate)
                            </th>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.EndDate)
                            </th>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.ImageFileData)
                            </th>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.Archived)
                            </th>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.ProjectPriority)
                            </th>
                            <th class="bg-dark text-light">Assign PM</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EndDate)
                                </td>
                                <td>
                                    @if (item.ImageFileData != null)
                                    {
                                        <img style="width:60px; height:60px" src="data:image/*;base64,@(Convert.ToBase64String(item.ImageFileData))" />
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Archived)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProjectPriority!.Id)
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-outline-secondary" asp-action="AssignPM" asp-route-projectId="@item.Id">Add PM</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>


        </div>
    </div>

</div>
