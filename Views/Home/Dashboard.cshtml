                                        @if (ticket.TicketStatus.Name == "New")
                                        {
                                            <td class="tx-right tx-medium tx-inverse">
                                                @ticket.TicketStatus.Name
                                            </td>
                                        }
                                        else
                                        {
                                            <td><span>@ticket.TicketStatus.Name</span></td>
                                        }

