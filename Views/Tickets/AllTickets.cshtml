@model IEnumerable<HotBug.Models.Ticket>
@using Microsoft.AspNetCore.Identity;
@using HotBug.Services.Interfaces;
@using HotBug.Models.Enums;
@using Microsoft.EntityFrameworkCore;
@using Microsoft.AspNetCore.Identity
@using HotBug.Models.Enums;
@using HotBug.Services;
@using HotBug.Services.Interfaces;

@inject UserManager<HBUser> UserManager
@inject IHBProjectService ProjectService


@{
    ViewData["Title"] = "All Tickets";
    HBUser hBUser = await UserManager.GetUserAsync(User);
}


<div class="mt-5">
    <div class="row mt-5">

        <!--ALL TICKETS-->
        <div class="col-xl-3 col-lg-6 col-md-6 col-6">
            <div class="card overflow-hidden sales-card bg-white alert-dark">
                <a asp-controller="Tickets" asp-action="AllTickets">
                    <div class="px-3 pt-3  pb-2 pt-0">
                        <div class="">
                            <h6 class="mb-3 tx-16 text-dark">ALL TICKETS</h6>
                        </div>
                        <div class="pb-0 mt-0">
                            <div class="d-flex">
                                <span class="float-end my-auto ms-auto">
                                    <i class="fas fa-arrow-circle-up text-white"></i>
                                    <h4 class="tx-20 fw-bold mb-1 text-white">
                                    </h4>
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!--MY TICKETS-->
        <div class="col-xl-3 col-lg-6 col-md-6 col-6">
            <div class="card overflow-hidden sales-card bg-secondary-gradient">
                <a asp-controller="Tickets" asp-action="MyTickets">
                    <div class="px-3 pt-3  pb-2 pt-0">
                        <div class="">
                            <h6 class="mb-3 tx-16 text-white">MY TICKETS</h6>
                        </div>
                        <div class="pb-0 mt-0">
                            <div class="d-flex">
                                <span class="float-end my-auto ms-auto">
                                    <i class="fas fa-arrow-circle-up text-white"></i>
                                    <h4 class="tx-20 fw-bold mb-1 text-white">
                                    </h4>
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!--ARCHIVED TICKETS-->
        <div class="col-xl-3 col-lg-6 col-md-6 col-6">
            <div class="card overflow-hidden sales-card bg-secondary-gradient">
                <a asp-controller="Tickets" asp-action="ArchivedTickets">
                    <div class="px-3 pt-3  pb-2 pt-0">
                        <div class="">
                            <h6 class="mb-3 tx-16 text-white">ARCHIVED</h6>
                        </div>
                        <div class="pb-0 mt-0">
                            <div class="d-flex">
                                <span class="float-end my-auto ms-auto">
                                    <i class="fas fa-arrow-circle-up text-white"></i>
                                    <h4 class="tx-20 fw-bold mb-1 text-white">
                                    </h4>
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!--UNASSIGNED TICKETS-->
        @if (User.IsInRole(nameof(Roles.Admin)) || User.IsInRole(nameof(Roles.ProjectManager)))
        {
            <div class="col-xl-3 col-lg-6 col-md-6 col-6">
                <div class="card overflow-hidden sales-card bg-secondary-gradient">
                    <a asp-controller="Tickets" asp-action="UnassignedTickets">
                        <div class="px-3 pt-3  pb-2 pt-0">
                            <div class="">
                                <h6 class="mb-3 tx-16 text-white">UNASSIGNED</h6>
                            </div>
                            <div class="pb-0 mt-0">
                                <div class="d-flex">
                                    <span class="float-end my-auto ms-auto">
                                        <i class="fas fa-arrow-circle-up text-white"></i>
                                        <h4 class="tx-20 fw-bold mb-1 text-white">
                                        </h4>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="col-xl-3 col-lg-6 col-md-6 col-6">
                <div class="card overflow-hidden sales-card bg-secondary-gradient">
                    <div class="px-3 pt-3  pb-2 pt-0">
                        <div class="">
                            <h6 class="mb-3 tx-16 text-white text-uppercase">unassigned</h6>
                        </div>
                        <div class="pb-0 mt-0">
                            <div class="d-flex">
                                <span class="float-end my-auto ms-auto">
                                    <i class="fas fa-arrow-circle-up text-white"></i>
                                    <h4 class="tx-20 fw-bold mb-1 text-white">
                                    </h4>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>

    <!--TICKET LIST-->
    <div class="card mt-2 px-4">
        <div class="row pt-3">
            <div class="col-6 text-dark font-weight-bold">
                <h3 class="">
                    All Tickets
                </h3>
            </div>
            <div class="col-6 text-end">
                <a asp-action="Create" class="btn btn-md btn-primary text-white semibold-text mb-3">Create A Ticket</a>
            </div>
        </div>
        <div class="body">
            <div class="table-responsive" style="overflow-y:auto;height:470px;">
                <table class="table table-hover table-bordered table-striped text-dark">
                    <thead class="">
                        <tr>
                            <th class="bg-dark text-light">
                                Name
                            </th>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.Created)
                            </th>
                            <th class="bg-dark text-light">
                                Updated
                            </th>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.Archived)
                            </th>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.Project)
                            </th>
                            <th class="bg-dark text-light">
                                Type
                            </th>
                            <th class="bg-dark text-light">
                                Priority
                            </th>
                            <th class="bg-dark text-light">
                                Status
                            </th>
                            @* <th class="bg-dark text-light">
                                Owner
                            </th> *@
                            @* <th class="bg-dark text-light">
                                Developer
                            </th> *@
                            <th class="bg-dark text-light">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-action="Details" asp-controller="Tickets" asp-route-id="@item.Id" style="color:darkslateblue"><strong>@item.Title</strong></a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Created)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Updated)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Archived)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Project.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TicketType.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                                </td>
                                @* <td>
                                    @Html.DisplayFor(modelItem => item.OwnerUser.FullName)
                                </td> *@
                                @* <td>
                                    @Html.DisplayFor(modelItem => item.DeveloperUser.FullName)
                                </td> *@
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
@*                                     <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-controller="Tickets" asp-route-id="@item.Id"><i class="fs-5 bi-justify"></i></a>
 *@
                                    @if (User.IsInRole(nameof(Roles.Admin)) || item.DeveloperUserId == hBUser.Id || item.OwnerUserId == hBUser.Id || await ProjectService.IsAssignedProjectManagerAsync(hBUser.Id, item.ProjectId))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
@*                                         <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-controller="Tickets" asp-route-id="@item.Id" title="Edit"><i class="fs-5 bi-pencil"></i></a>
 *@                                    }

                                    @if (User.IsInRole(nameof(Roles.Admin)) || await ProjectService.IsAssignedProjectManagerAsync(hBUser.Id, item.ProjectId))
                                    {
                                        if (item.Archived)
                                        {
                                            <a asp-action="Restore" asp-route-id="@item.Id">Restore</a>
                                        }
                                        else
                                        {
                                            <a asp-action="Archive" asp-route-id="@item.Id">Archive</a>
                                        }
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
