@model HotBug.Models.ViewModels.DashboardViewModel
@using HotBug.Models
@using HotBug.Models.Enums
@using HotBug.Services.Interfaces
@using Microsoft.AspNetCore.Identity

@inject UserManager<HBUser> UserManager
@inject IHBRolesService RoleService
@inject IHBProjectService ProjectService
@inject IHBCompanyInfoService CompanyService

@{
    ViewData["Title"] = "Company";
    HBUser hBUser = await UserManager.GetUserAsync(User);
}

<div class="mt-5">
    <div class="card mt-5 px-4">
        <h3>
            <div class="row pt-1 mt-3">
                <div class="col-6 text-dark font-weight-bold">
                    Companies
                </div>
                @if(User.IsInRole(nameof(Roles.Admin)) || User.IsInRole(nameof(Roles.ProjectManager)))
                {
                <div class="col-6 text-end">
                    <h3>
                        <a asp-action="Create" class="btn btn-md btn-secondary text-white semibold-text mb-2">Create Company</a>
                    </h3>
                </div>
                }
            </div>
        </h3>
        <div class="card">
            <div class="table-responsive country-table">

                <table class="table table-striped table-bordered mb-0 text-sm-nowrap text-lg-nowrap text-xl-nowrap">
                    <thead>
                        <tr class="bg-dark">
                            <th class="text-light">
                                Name
                            </th>
                            <th class="text-light">
                                Email
                            </th>
                            <th class="text-light">
                                Role
                            </th>
                            <th class="text-light">
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (HBUser member in Model.Members)
                        {
                            <tr>
                                <td class="font-bold">
                                    @member.FullName
                                </td>
                                <td>
                                    @member.Email
                                </td>
                                <td>
                                    @((await RoleService.GetUserRolesAsync(member)).FirstOrDefault())
                                </td>
                                <td>
                                    <a asp-action="ManageUserRoles" asp-controller="UserRoles" asp-route-id="@member.Id" class="text-dark">Take Action</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

