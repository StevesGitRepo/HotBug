@model HotBug.Models.ViewModels.DashboardViewModel
@using HotBug.Models
@using HotBug.Models.Enums
@using HotBug.Services.Interfaces
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore;
@using Microsoft.AspNetCore.Identity
@using HotBug.Models.Enums;
@using HotBug.Services;

@inject UserManager<HBUser> UserManager

@{
    ViewData["Title"] = "Index";
    HBUser hBUser = await UserManager.GetUserAsync(User);
}

<div class="mt-5">
    <div class="card mt-5 px-4">
        <h3>
            <div class="row pt-1 mt-3">
                <div class="col-6 text-dark font-weight-bold">
                    Companies
                </div>
                @* @if (User.IsInRole(nameof(Roles.Admin)) || User.IsInRole(nameof(Roles.ProjectManager)))
                {
                }
                <div class="col-6 text-end">
                    <h3>
                        <a asp-action="Create" class="btn btn-md btn-purple text-white semibold-text mb-2">Create Company</a>
                    </h3>
                </div> *@
            </div>
        </h3>
        <div class="card">
            <div class="table-responsive country-table">

                <table class="table table-striped table-bordered mb-0 text-sm-nowrap text-lg-nowrap text-xl-nowrap">
                    <thead>
                        <tr>
                            <th class="text-light bg-dark">
                                Company Name
                            </th>
                            <th class="text-light bg-dark">
                                Description
                            </th>
                            <th class="text-light bg-dark">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                            <tr>
                                <td class="font-bold">
                                    <a asp-action="Details" asp-route-id="@Model.Company.Id">@Model.Company.Name</a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Company.Description)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@Model.Company.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@Model.Company.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@Model.Company.Id">Delete</a>
                                </td>
                            </tr>
                        
                    </tbody>
                </table>
            </div>
        </div>
        <div class="mb-3">
            <a asp-action="Dashboard" asp-controller="Home">Back to Dashboard</a>
        </div>
    </div>
</div>

