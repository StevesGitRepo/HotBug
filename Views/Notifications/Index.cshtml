@model IEnumerable<HotBug.Models.Notification>

@{
    ViewData["Title"] = "Index";
}

<div class="mt-4">
    <div class="row">
        <!--MY NOTIFICATIONS-->
        <div class="col-xl-3 col-lg-6 col-md-6 col-xm-12">
            <div class="card overflow-hidden sales-card bg-info-gradient alert-dark">
                <a asp-controller="Notifications" asp-action="Index">
                    <div class="px-3 pt-3 pb-2 pt-0">
                        <div class="">
                            <h6 class="tx-16 text-white">MY NOTIFICATIONS</h6>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!--CREATE NOTIFICATION-->
        <div class="col-xl-3 col-lg-6 col-md-6 col-xm-12">
            <div class="card overflow-hidden sales-card bg-secondary-gradient">
                <a asp-controller="Notifications" asp-action="Create">
                    <div class="px-3 pt-3 pb-2 pt-0">
                        <div class="">
                            <h6 class="tx-16 text-white">CREATE A NOTIFICATION</h6>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!--TICKETS-->
        <div class="col-xl-3 col-lg-6 col-md-6 col-xm-12">
            <div class="card overflow-hidden sales-card bg-secondary-gradient">
                <a asp-controller="Tickets" asp-action="AllTickets">
                    <div class="px-3 pt-3  pb-2 pt-0">
                        <div class="">
                            <h6 class="tx-16 text-white">TICKETS</h6>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!--DASHBOARD-->
        <div class="col-xl-3 col-lg-6 col-md-6 col-xm-12">
            <div class="card overflow-hidden sales-card bg-secondary-gradient">
                <a asp-action="Dashboard" asp-controller="Home">
                    <div class="px-3 pt-3  pb-2 pt-0">
                        <div class="">
                            <h6 class="tx-16 text-white">DASHBOARD</h6>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <div class="card px-4">
        <div class="row pt-3">
            <div class="col-6 text-dark font-weight-bold">
                <h3>Notifications</h3>
            </div>
            <div class="col-6 text-end">
                <a asp-action="Create" class="btn btn-md btn-primary text-white semibold-text mb-3">Create New</a>
            </div>
        </div>
        <div class="table-responsive country-table">
            <table class="table table-striped table-bordered pb-4 text-sm-nowrap text-lg-nowrap text-xl-nowrap">
                <thead>
                    <tr>
                        <th class="bg-dark text-light">
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th class="bg-dark text-light">
                            @Html.DisplayNameFor(model => model.Message)
                        </th>
                        <th class="bg-dark text-light">
                            @Html.DisplayNameFor(model => model.Created)
                        </th>
                        <th class="bg-dark text-light">
                            @Html.DisplayNameFor(model => model.Viewed)
                        </th>
                        <th class="bg-dark text-light">
                            @Html.DisplayNameFor(model => model.Ticket)
                        </th>
                        <th class="bg-dark text-light">
                            @Html.DisplayNameFor(model => model.Recipient)
                        </th>
                        <th class="bg-dark text-light">
                            @Html.DisplayNameFor(model => model.Sender)
                        </th>
                        <th class="bg-dark text-light">Action</th>
                    </tr>
                </thead>
                <tbody class="pb-3">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Message)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Created)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Viewed)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ticket.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Recipient.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sender.Id)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Sidebar-right-->
<div class="sidebar sidebar-right sidebar-animate">
    <div class="panel panel-primary card mb-0 box-shadow">
        <div class="tab-menu-heading border-0 p-3">
            <div class="card-title mb-0">Settings</div>
            <div class="card-options ms-auto">
                <a class="sidebar-remove"><i class="fe fe-x"></i></a>
            </div>
        </div>
        <div class="panel-body tabs-menu-body latest-tasks p-0 border-0">
            <div class="tabs-menu ">
                <!-- Tabs -->
                <ul class="nav panel-tabs">
                    <li><a asp-area="Identity" asp-page="/Account/Manage/Index" target="_blank" title="Profile"><i class="fe fe-bell tx-15 me-2"></i>Profile</a></li>
                    <li><a asp-action="Index" asp-controller="Notifications"><i class="fe fe-bell tx-15 me-2"></i> Notifications</a></li>
                </ul>
            </div>
            <div class="tab-content">
            </div>
        </div>
    </div>
</div>