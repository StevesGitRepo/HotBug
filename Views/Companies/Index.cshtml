@model HotBug.Models.ViewModels.DashboardViewModel
@using HotBug.Models
@using HotBug.Models.Enums
@using HotBug.Services.Interfaces
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore;
@using Microsoft.AspNetCore.Identity
@using HotBug.Models.Enums;
@using HotBug.Services;

@inject UserManager<HBUser> UserManager

@{
    ViewData["Title"] = "Index";
    HBUser hBUser = await UserManager.GetUserAsync(User);
}

<!-- Sidebar-right-->
<div class="sidebar sidebar-right sidebar-animate">
    <div class="panel panel-primary card mb-0 box-shadow">
        <div class="tab-menu-heading border-0 p-3">
            <div class="card-title mb-0">Settings</div>
            <div class="card-options ms-auto">
                <a class="sidebar-remove"><i class="fe fe-x"></i></a>
            </div>
        </div>
        <div class="panel-body tabs-menu-body latest-tasks p-0 border-0">
            <div class="tabs-menu ">
                <!-- Tabs -->
                <ul class="nav panel-tabs">
                    <li><a asp-area="Identity" asp-page="/Account/Manage/Index" target="_blank" title="Profile"><i class="fe fe-bell tx-15 me-2"></i>Profile</a></li>
                    <li><a asp-action="Index" asp-controller="Notifications"><i class="fe fe-bell tx-15 me-2"></i> Notifications</a></li>
                </ul>
            </div>
            <div class="tab-content">
            </div>
        </div>
    </div>
</div>

<div class="mt-4 index-bg-imageUpD-blur">
    <div class="card px-4">
        <h3>
            <div class="row pt-1">
                <div class="col-6 text-dark font-weight-bold mt-2">
                    Company
                </div>
                @* @if (User.IsInRole(nameof(Roles.Admin)) || User.IsInRole(nameof(Roles.ProjectManager)))
                {
                }
                <div class="col-6 text-end">
                    <h3>
                        <a asp-action="Create" class="btn btn-md btn-purple text-white semibold-text mb-2">Create Company</a>
                    </h3>
                </div> *@
            </div>
        </h3>
        <div class="card">
            <div class="table-responsive country-table">

                <table class="table table-hover mb-0 text-sm-nowrap text-lg-nowrap text-xl-nowrap">
                    <thead>
                        <tr>
                            <th class="text-dark bg-light">
                                Company Name
                            </th>
                            <th class="text-dark bg-light">
                                Description
                            </th>
                            <th class="text-dark bg-light">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                            <tr>
                                <td class="font-bold">
                                    <a asp-action="Details" asp-route-id="@Model.Company.Id">@Model.Company.Name</a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Company.Description)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@Model.Company.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@Model.Company.Id">Details</a> |
                                    @* <a asp-action="Delete" asp-route-id="@Model.Company.Id">Delete</a> *@
                                </td>
                            </tr>
                        
                    </tbody>
                </table>
            </div>
        </div>
        <div class="mb-3">
            <a asp-action="Dashboard" asp-controller="Home">Back to Dashboard</a>
        </div>
    </div>
</div>

