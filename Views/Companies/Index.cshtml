@model IEnumerable<HotBug.Models.Company>
@using HotBug.Models
@using HotBug.Models.Enums
@using HotBug.Services.Interfaces
@using Microsoft.AspNetCore.Identity

@inject UserManager<HBUser> UserManager
@inject IHBRolesService RoleService

@{
    ViewData["Title"] = "Company";
}
    @*HBUser hBUser = await UserManager.GetRolesAsync(User);*@

<div class="mt-5">
    <div class="card mt-5 px-4">
        <h3>
            <div class="row pt-1 mt-3">
                <div class="col-6 text-dark font-weight-bold">
                    Companies
                </div>
                <div class="col-6 text-end">
                    <h3>
                        <a asp-action="Create" class="btn btn-md btn-secondary text-white semibold-text mb-2">Create Company</a>
                    </h3>
                </div>
            </div>
        </h3>
        <div class="card">
            <div class="table-responsive country-table">

                <table class="table table-striped table-bordered mb-0 text-sm-nowrap text-lg-nowrap text-xl-nowrap">
                    <thead>
                        <tr>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th class="bg-dark text-light">
                                Edit Details
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="font-bold">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

