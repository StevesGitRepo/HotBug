@model IEnumerable<HotBug.Models.Ticket>
@using Microsoft.AspNetCore.Identity;
@using HotBug.Services.Interfaces;
@using HotBug.Models.Enums;

@inject UserManager<HBUser> UserManager
@inject IHBProjectService ProjectService

@{
    ViewData["Title"] = "My Tickets";
}


<div class="mt-4">
    <div class="row">
        <!--ALL TICKETS-->
        <div class="col-xl-3 col-lg-6 col-md-6 col-6">
            <div class="card overflow-hidden active-card sales-card bg-secondary-gradient">
                <a asp-controller="Tickets" asp-action="AllTickets">
                    <div class="px-3 pt-3  pb-2 pt-0">
                        <div class="">
                            <h6 class="tx-16 text-white">ALL TICKETS</h6>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <!--MY TICKETS-->

        <div class="col-xl-3 col-lg-6 col-md-6 col-6">
            <div class="card overflow-hidden sales-card active-card bg-info alert-dark">
                <a asp-controller="Tickets" asp-action="MyTickets">
                    <div class="px-3 pt-3  pb-2 pt-0">
                        <div class="">
                            <h6 class="tx-16 text-white">MY TICKETS</h6>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <!--ARCHIVED TICKETS-->
        <div class="col-xl-3 col-lg-6 col-md-6 col-6">
            <div class="card overflow-hidden sales-card active-card bg-secondary-gradient">
                <a asp-controller="Tickets" asp-action="ArchivedTickets">
                    <div class="px-3 pt-3  pb-2 pt-0">
                        <div class="">
                            <h6 class="tx-16 text-white">ARCHIVED</h6>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <!--UNASSIGNED TICKETS-->
        @if (User.IsInRole(nameof(Roles.Admin)) || User.IsInRole(nameof(Roles.ProjectManager)))
        {
            <div class="col-xl-3 col-lg-6 col-md-6 col-6">
                <div class="card overflow-hidden sales-card active-card bg-secondary-gradient">
                    <a asp-controller="Tickets" asp-action="UnassignedTickets">
                        <div class="px-3 pt-3  pb-2 pt-0">
                            <div class="">
                                <h6 class="tx-16 text-white">UNASSIGNED</h6>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="col-xl-3 col-lg-6 col-md-6 col-6">
                <div class="card overflow-hidden sales-card bg-secondary-gradient">
                    <div class="px-3 pt-3  pb-2 pt-0">
                        <div class="">
                            <h6 class="mb-3 tx-16 text-white text-uppercase">unassigned</h6>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="card px-4">
        <div class="row pt-3">
            <div class="col-6 text-dark font-weight-bold">
                <h3>
                    My Tickets
                </h3>
            </div>
            <div class="col-6 text-end">
                <a asp-action="Create" class="btn btn-md btn-primary text-white semibold-text mb-3">Create A Ticket</a>
            </div>
        </div>
        <div class="body">
            <div class="table-responsive" style="overflow-y:auto;height:470px;">

                <table class="table table-hover table-bordered table-striped text-dark">
                    @* text-sm-nowrap text-lg-nowrap text-xl-nowrap *@
                    <thead>
                        <tr class="">
                            <th class="bg-dark text-light">
                                Name
                            </th>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.Created)
                            </th>
                            <th class="bg-dark text-light">
                                Updated
                            </th>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.Archived)
                            </th>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.Project)
                            </th>
                            <th class="bg-dark text-light">
                                Type
                            </th>
                            <th class="bg-dark text-light">
                                Priority
                            </th>
                            <th class="bg-dark text-light">
                                Status
                            </th>
                           @*  <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.OwnerUser)
                            </th>
                            <th class="bg-dark text-light">
                                @Html.DisplayNameFor(model => model.DeveloperUser)
                            </th> *@
                            <th class="bg-dark text-light">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-action="Details" asp-controller="Tickets" asp-route-id="@item.Id" style="color:darkslateblue"><strong>@item.Title</strong></a>

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Created)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Updated)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Archived)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Project.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TicketType.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                                </td>
                               @*  <td>
                                    @Html.DisplayFor(modelItem => item.OwnerUser.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DeveloperUser.FullName)
                                </td> *@
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <script src="~/js/JavaScript.js"></script>

</div>
<!-- Sidebar-right-->
<div class="sidebar sidebar-right sidebar-animate">
    <div class="panel panel-primary card mb-0 box-shadow">
        <div class="tab-menu-heading border-0 p-3">
            <div class="card-title mb-0">Settings</div>
            <div class="card-options ms-auto">
                <a class="sidebar-remove"><i class="fe fe-x"></i></a>
            </div>
        </div>
        <div class="panel-body tabs-menu-body latest-tasks p-0 border-0">
            <div class="tabs-menu ">
                <!-- Tabs -->
                <ul class="nav panel-tabs">
                    <li><a asp-area="Identity" asp-page="/Account/Manage/Index" target="_blank" title="Profile"><i class="fe fe-bell tx-15 me-2"></i>Profile</a></li>
                    <li><a asp-action="Index" asp-controller="Notifications"><i class="fe fe-bell tx-15 me-2"></i> Notifications</a></li>
                </ul>
            </div>
            <div class="tab-content">
            </div>
        </div>
    </div>
</div>
