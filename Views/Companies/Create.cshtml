@model HotBug.Models.Company

@{
    ViewData["Title"] = "Create";
}


<hr />

<div class="row">
    <div class="col-xl-2"></div>
    <div class="col-xl-8">
        <div class="card">
            <div class="row pt-3 mb-4 mx-4">
                <div class="col">
                    <h3 class="font-bold text-white text-center bg-secondary-gradient rounded mt-3 mb-3 py-1">Create a Company</h3>
                </div>
                <div class="col-md-12">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-4">
                            <input type="submit" value="Create" class="btn text-white semibold-text btn-primary btn-md btn-rounded" />
                        </div>
                    </form>
                    <div>
                        <a asp-action="Index" class="mb-4">Back to List</a>
                    </div>
                </div>
        </div>
    </div>
    <div class="col-xl-2"></div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
