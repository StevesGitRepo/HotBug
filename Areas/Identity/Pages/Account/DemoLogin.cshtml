@page
@model DemoLoginModel

@{
    ViewData["Title"] = "Demo Log in";
}

<h1>@ViewData["Title"]</h1>

<div class="row mt-5 ps-1 ms-1 ps-md-0 ms-md-0">
    <h2 class="mb-4">Demo HotBug as the:</h2>

    <!-- ADMIN DEMO -->
    <div class="col-md-4">
        <div class="card px-3 py-3">
            <form id="account" method="post">
                <h2>Administrator</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control mb-3" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control mb-2" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-36 btn btn-md btn-primary mt-3 mb-2">
                        <span>
                            <img src="~/img/hotbug/hbGetStartedBtnCropped.png" width="100" />
                        </span>
                    </button>
                </div>
            </form>
        </div>
    </div>
    <!-- PROJECT MANAGER DEMO -->
    <div class="col-md-4">
        <div class="card px-3 py-3">
            <form id="account" method="post">
